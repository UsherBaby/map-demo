<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#BABABA"
                android:centerY="1.0"
                android:endColor="#BABABA"
                android:startColor="#BABABA" />
            <corners android:radius="2dp"/>
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="@color/splash_progress_bar"
                    android:centerY="1.0"
                    android:endColor="@color/splash_progress_bar"
                    android:startColor="@color/splash_progress_bar" />
                <corners android:radius="2dp"/>
            </shape>
        </clip>
    </item>
</layer-list>