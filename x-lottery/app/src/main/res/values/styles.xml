<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapCon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="ConCon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="ConWrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="PrimaryAlert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary</item>
    </style>

    <style name="FullScreenDialogFragment" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SplashVersionText" parent="WrapWrap">
        <item name="android:layout_marginBottom">@dimen/x_small_margin</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/hk_network</item>
    </style>

    <style name="MenuIcon" parent="CommonImage">
        <item name="android:layout_marginTop">@dimen/menu_icon_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/menu_icon_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/menu_icon_margin_left</item>
    </style>

    <style name="MenuTitle" parent="WrapWrap">
        <item name="android:textColor">@color/me_menu_title</item>
        <item name="android:layout_marginLeft">@dimen/menu_icon_margin_left</item>
    </style>

    <style name="MenuDepositTitle" parent="MenuTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MenuDesc" parent="WrapWrap">
        <item name="android:layout_marginTop">@dimen/x_small_margin</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/me_menu_desc</item>
    </style>

    <style name="MenuDivider">
        <item name="android:layout_width">0.5dip</item>
        <item name="android:layout_marginTop">@dimen/menu_icon_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/menu_icon_margin_top</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/me_menu_divider</item>
    </style>

    <style name="MenuContainer">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_me_menu</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MenuDepositContainer">
        <item name="android:layout_height">50dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_me_menu</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="CommonImage" parent="WrapWrap">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SingleLineText">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuInfoText" parent="WrapWrap">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/me_info_desc</item>
    </style>

    <style name="BalanceText" parent="WrapWrap">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="GameIcon" parent="CommonImage">
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:layout_marginLeft">@dimen/home_game_icon_margin</item>
    </style>

    <style name="GameTitle" parent="WrapWrap">
        <item name="android:textColor">@color/me_menu_title</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GameDesc" parent="WrapWrap">
        <item name="android:layout_marginTop">@dimen/x_small_margin</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/home_game_desc</item>
    </style>

    <style name="GameContainer" parent="ConWrap">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_me_menu</item>
    </style>

    <style name="GameRowLayout" parent="MatchWrap">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="GameItemButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/game_item</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff001</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GameItemArrowImage" parent="WrapWrap">
        <item name="android:visibility">invisible</item>
        <item name="android:src">@drawable/img_arrow_up</item>
    </style>

</resources>
